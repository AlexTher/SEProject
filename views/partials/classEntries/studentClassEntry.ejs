
<% for (var i=0; i < classes.length; i++) { %>
<div class="panel panel-default">
    
    <!--Displays Class Name-->
    <div class="panel-body">
        <div class="col-xs-8">
            <h3>
                <%= classes[i].subject.className %>
            </h3>
        </div>
    
    <!--Displays Class Subject-->
        <div class="col-xs-4">
            <h3>
                <%= classes[i].subject.classID %>-<%= classes[i].subject.department %>
            </h3>
        </div>
    </div>

    <!--Displays Teacher Name-->
    <div class="panel-body">
        <div class="col-md-4">
            <p>
                Teacher: 
                <% if(classes[i].teacher){ %>
                    <%= classes[i].teacher.name %>
                  <% } else{ %>  
                    Undetermined
                 <% } %>
            </p>
        </div>
    
    <!--Displays Class Building and Room Number-->
        <div class="col-md-4">
            <p>
                Room:
                <% if(classes[i].room){ %>
                    <%= classes[i].room.building %>-<%= classes[i].room.number %>
                  <% } else{ %>  
                    Undetermined
                 <% } %>
            </p>
        </div>
    
    <!--Displays Class Capacity-->
        <div class="col-md-4">
            <p>
                Capacity:
                <% if(classes[i].room){ %>
                    <%= classes[i].room.capacity %>
                <% } else{ %>  
                    Undetermined
                <% } %>
            </p>
        </div>
    </div>

    <!--Displays Class Schedule-->
    <div class="panel-body">
        <div class="col-md-12">
            <p>
                Schedule: 
                <% if(classes[i].schedule && classes[i].schedule.classTimes){ %>
                    <% for (var j=0; j < classes[i].schedule.classTimes.length; j++) { %>
                        <%= classes[i].schedule.classTimes[j].day %>
                        [
                        <%= classes[i].schedule.classTimes[j].startTime %>
                        -
                        <%= classes[i].schedule.classTimes[j].endTime %>
                        ]
                        <% if(j < classes[i].schedule.classTimes.length - 1) { %>
                            &nbsp &nbsp
                        <% } %>
                    <% } %>
                <% } else{ %>  
                    Undetermined
                <% } %>

                
            </p>
        </div>
    </div>

    <!--Displays Button 1-->
    <div class="panel-body">
        <div class="col-xs-6">
             
            <button type="button" class="btn btn-lg btn-block" data-class-id="<%= classes[i]._id %>" onClick="addToWaitlist(this)">
                Add Class to Waitlist
            </button>

        </div>

    <!--Displays Button 2-->
        <!-- <div class="col-xs-6">
                
            <button type="button" class="btn btn-lg btn-block">
                Button
            </button>
        </div> -->
    </div>
</div>
<% } %>