			</div>

			<!--Password Text Box-->
			<div class="form-group">
            	<input type="text" class="form-control" id="inputPassword" placeholder="Password">	
				<!--randmonly generate password?-->
			</div>

			<!--Submit Button-->
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Submit</button>
			</div>
	</form>

